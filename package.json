{
	"private": true,
	"name": "axiom.games",
	"version": "0.0.0-dev.1",
	"description": "",
	"license": "ISC",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"type": "module",
	"files": [],
	"scripts": {
		"build": "run-s clean && run-p importmap nodemodules linksource copy compile-typescript && run-p test compile-bundle web",
		"clean": "rimraf x && mkdirp x",
		"linksource": "ln -s \"$PWD/s\" x/s",
		"nodemodules": "ln -s \"$PWD/node_modules\" x/node_modules",
		"importmap": "importly < package-lock.json > x/importmap.json",
		"copy": "run-p copy-assets copy-metas",
		"copy-assets": "ln -s \"$PWD/assets\" x/assets",
		"copy-metas": "cp CNAME x/ && touch x/.nojekyll",
		"compile-typescript": "tsc",
		"compile-bundle": "run-s compile-bundle-rollup compile-bundle-minify",
		"compile-bundle-rollup": "rollup --silent --sourcemap -p rollup-plugin-sizes -p @rollup/plugin-node-resolve -f iife -i x/axiom.js -o x/axiom.bundle.js",
		"compile-bundle-minify": "terser x/axiom.bundle.js -cm --source-map --comments false -o x/axiom.bundle.min.js",
		"web": "node x/web/build.js",
		"web-debug": "node x/web/build.js debug",
		"watch-typescript": "npm run -s compile-typescript -- -w",
		"watch-bundle": "npm run -s compile-bundle-rollup -- -w",
		"watch-web": "chokidar \"x/web/**/*.js\" -c \"npm run web-debug -s && echo 'rebuilt web'\"",
		"watch": "run-s web-debug && run-p watch-typescript watch-bundle watch-web",
		"test": "cynic node --label='axiom games test suite' x/tests.test.js",
		"start": "http-server x"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^13.1.2",
		"chokidar-cli": "^3.0.0",
		"cynic": "0.1.0-dev.16",
		"http-server": "^14.0.0",
		"importly": "^0.1.0",
		"mkdirp": "^1.0.4",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"rollup": "^2.62.0",
		"serve": "^13.0.2",
		"terser": "^5.10.0",
		"typescript": "^4.5.4"
	},
	"dependencies": {
		"ammo.js": "github:kripken/ammo.js",
		"ammojs-typed": "1.0.6",
		"babylonjs": "5.0.0-alpha.65",
		"babylonjs-loaders": "5.0.0-alpha.65",
		"babylonjs-materials": "5.0.0-alpha.65",
		"es-module-shims": "^1.4.1",
		"lit": "^2.0.2",
		"rollup-plugin-sizes": "^1.0.4",
		"xiome": "^0.0.18"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chase-moskal/axiom.games.git"
	},
	"bugs": {
		"url": "https://github.com/chase-moskal/axiom.games/issues"
	},
	"homepage": "https://github.com/chase-moskal/axiom.games#readme"
}
